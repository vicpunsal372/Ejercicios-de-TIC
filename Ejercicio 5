#include <stdio.h>
int main()
{   
    int num1;
    int num2;
    printf("Por favor introdzca el numero 1:");
    scanf ("%d", &num1);
    printf("Por favor introdzca el numero 2:");
    scanf ("%d", &num2);
    if (num2<num1) {
        int aux=num1;
        num1=num2;
        num2= aux;
    } 
    int i= num1;
    int suma= 0;
    while (i <=num2) {
        suma= i + suma; 
        i++;
    }
    printf ("El numero final es: %d ", suma);
    return 0;
}
